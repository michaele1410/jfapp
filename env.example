
# --- Security ---
SECRET_KEY=change-me-to-a-long-random-string

# --- Database ---
DB_HOST=bottlebalance-db
DB_NAME=bottlebalance
DB_USER=appuser
DB_PASS=super-secure-db-password

# --- App Base URL ---
APP_BASE_URL=https://kiosk.example.com

# --- SMTP ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASS=your-mailer-password
SMTP_TLS=true
SMTP_SSL=false
SMTP_TIMEOUT=10
FROM_EMAIL=mailer@example.com
SEND_TEST_MAIL=true

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# --- ERROR Handling ---
SUPPORT_EMAIL = support@example.com
SUPPORT_URL = https://support.example.com


IMPORT_USE_PREVIEW=true
IMPORT_ALLOW_MAPPING=true
IMPORT_ALLOW_DRYRUN=true
